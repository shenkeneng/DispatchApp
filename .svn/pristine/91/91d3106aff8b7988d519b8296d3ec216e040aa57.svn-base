<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        style="@style/ActionBarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/frxs_red">

        <include layout="@layout/view_title" />

    </android.support.v7.widget.Toolbar>

    <!--<com.scwang.smartrefresh.layout.SmartRefreshLayout-->
        <!--android:id="@+id/refresh_layout"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"-->
        <!--app:srlEnablePureScrollMode="true">-->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/user_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableTop="@mipmap/ic_big_head_portrait"
                android:drawablePadding="@dimen/spacing_small"
                android:padding="@dimen/spacing_large"
                android:gravity="center"
                android:background="@color/frxs_red"
                android:textSize="@dimen/font_larger"
                android:textColor="@android:color/white"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="@dimen/common_margin"
                android:layout_marginRight="@dimen/common_margin"
                android:background="@color/dividerColor" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:background="@color/dividerColor" />

                <LinearLayout
                    android:id="@+id/update_psw_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/update_password_tv"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawableLeft="@mipmap/ic_update_psw"
                        android:drawablePadding="10dp"
                        android:gravity="center_vertical"
                        android:padding="@dimen/fab_margin"
                        android:text="@string/update_password"
                        android:textSize="@dimen/font_large" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/fab_margin"
                        android:src="@mipmap/ic_mine_right_flag" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:background="@color/dividerColor" />

                <LinearLayout
                    android:id="@+id/check_version_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawableLeft="@mipmap/ic_version"
                        android:drawablePadding="10dp"
                        android:gravity="center_vertical"
                        android:padding="@dimen/fab_margin"
                        android:text="@string/version_id"
                        android:textSize="@dimen/font_large" />

                    <TextView
                        android:id="@+id/tv_version_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawablePadding="3dp"
                        android:drawableRight="@mipmap/ic_mine_right_flag"
                        android:gravity="center_vertical"
                        android:padding="@dimen/fab_margin"
                        android:textSize="@dimen/font_normal" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:background="@color/dividerColor" />

            </LinearLayout>

            <Button
                android:id="@+id/logout_btn"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="@dimen/capsule_btn_height"
                android:background="@drawable/selector_capsule_btn"
                android:text="@string/logout"
                android:textColor="@android:color/white"
                android:textSize="@dimen/font_large" />

        </LinearLayout>

    </ScrollView>

    <!--</com.scwang.smartrefresh.layout.SmartRefreshLayout>-->

</LinearLayout>